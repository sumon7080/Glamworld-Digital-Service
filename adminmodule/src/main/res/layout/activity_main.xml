<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/service"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="সাধারণ সার্ভিস"
                    android:gravity="center"
                    android:layout_margin="15dp"
                    />

                <TextView
                    android:id="@+id/studentService"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:text="Student সার্ভিস"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_margin="15dp"
                    />




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/immigrants"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="বিদেশ গমন ইচ্ছুকদের জন্য অনলাইন সার্ভিস"
                    android:gravity="center"
                    android:layout_margin="15dp"
                    />

                <TextView
                    android:id="@+id/deviceRepair"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:text="কম্পিউটার বা ল্যাপটপের সফটওয়ার জনিত সার্ভিস (Home Service)"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_margin="15dp"
                    />




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/itSerForBusiness"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="ব্যবসায়ীদের জন্য IT সেবা"
                    android:gravity="center"
                    android:layout_margin="15dp"
                    />





            </LinearLayout>









        </LinearLayout>








    </ScrollView>

</RelativeLayout>